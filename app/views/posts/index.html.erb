<% if @posts.any? %>
  <% @posts.each do |post| %>
    <br>
    <%= link_to post.title, post_path(post) %>
    <%= image_tag post.image.url(:medium) %>
    <%= link_to "Delete #{post.title}", post_path(post), method: :delete %>
    <br>
  <% end %>
<% else %>
  No posts yet!
<% end %>

<br>
<%= link_to 'Add a post', new_post_path %>